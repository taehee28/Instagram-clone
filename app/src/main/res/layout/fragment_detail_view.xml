<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="adapter"
            type="com.thk.instagram_clone.navigation.DetailListAdapter" />

        <variable
            name="viewModel"
            type="com.thk.instagram_clone.viewmodel.DetailViewViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.DetailViewFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_detailList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:adapter="@{adapter}"
            app:submitList="@{viewModel.itemsFlow}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/item_detail_view"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
